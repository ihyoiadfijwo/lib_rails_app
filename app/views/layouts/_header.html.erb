<div style="background-color: blue; color: white; padding: 10px; display: flex; justify-content: space-between; align-items: center;">
  <div style="font-size: 20px; font-weight: bold;">
    Books
  </div>
  <div style="display: flex; gap: 16px;">
    <% if current_user %>
      <span style="margin-right: 24px;">ようこそ、<%= current_user.name %>さん</span>
    <% end %>
    <%= link_to "検索", books_path, style: "color: white; text-decoration: none;" %>
    <% if current_user && current_user.role == "libadmin" %>
      <%= link_to "ダッシュボード", "#", style: "color: white; text-decoration: none;" %>
    <% end %>
    <% if current_user %>
      <%= link_to "ログアウト", logout_path, data: { turbo_method: "delete" }, style: "color: white; text-decoration: none;" %>
    <% else %>
      <%= link_to "ログイン", login_path, style: "color: white; text-decoration: none;" %>
    <% end %>
  </div>
</div>